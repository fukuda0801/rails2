<h3 class = "newSchedule">edit schedule</h3>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
    <table>
        <tr>
            <th><%= f.label :title, "title" %></th>
            <td><%= f.text_field :title %></td>
        <tr>

        <tr>
            <th><%= f.label :start_day, "starting date" %></th>
            <td><%= f.date_select :start_day,{use_month_numbers: true} %></td>
        </tr>
        
        <tr>
            <th><%= f.label :end_day,"end date" %></th>
            <td><%= f.date_select :end_day,{use_month_numbers: true} %></td>
        </tr>

        <tr>
            <th><%= f.label :all_day,"all day" %></th>
            <td><%= f.check_box :all_day%></td>
        </tr>

        <tr>
            <th><%= f.label :memo,"memo" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>

    <div class = "newSchedule">
        <ul>
            <li><%= f.submit "registration",class: "newScheduleButton" %></li>
            <li><%= link_to "schedule list", users_path %></li>
        </ul>
    </div>
<% end %>